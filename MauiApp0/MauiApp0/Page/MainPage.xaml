<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp0.MainPage"
             >


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Button 
                Grid.Column="0"
                Grid.Row="0"
                x:Name="btnPopUp"
                Text="PopUp"
                FontSize="10"
                WidthRequest="150"
                HeightRequest="40"
                Clicked="Click_btnPopUp"/>
            <Button 
                Grid.Column="2"
                Grid.Row="0"
                x:Name="btnFileRead"
                Text="FileRead"
                FontSize="10"
                WidthRequest="150"
                HeightRequest="40"
                Clicked="Click_btnFileRead"/>

            <Button 
                Grid.Column="0"
                Grid.Row="1"
                x:Name="btnOpenPage"
                Text="Open page"
                FontSize="10"
                WidthRequest="150"
                HeightRequest="40"
                Clicked="Click_btnOpenPage"/>
            <Button 
                Grid.Column="2"
                Grid.Row="1"
                x:Name="btnOpenPage_modal"
                Text="Open page【Modal】"
                FontSize="10"
                WidthRequest="150"
                HeightRequest="40"
                Clicked="Click_btnOpenPage_modal"/>

            <Grid Grid.Column="0" Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" BackgroundColor="White" Margin="20,2,0,0">
                        <Label
                            Grid.Row="0"
                            x:Name="lblPortNum"
                            Text="0"
                            TextColor="Black"
                            FontSize="10"
                            HorizontalOptions="Center"
                            VerticalOptions="Center"/>
                    </Grid>
                    <Grid Grid.Row="1" Margin="20,0,2,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button 
                            Grid.Column="0"
                            x:Name="btnDown"
                            Text="▼"
                            FontSize="8"
                            TextColor="Black"
                            Clicked="clicked_btnDown"/>
                        <Button 
                            Grid.Column="1"
                            x:Name="btnUp"
                            Text="▲"
                            FontSize="8"
                            TextColor="Black"
                            Clicked="clicked_btnUp"/>
                    </Grid>
                </Grid>
                <Button 
                    Grid.Column="2"
                    Grid.Row="0"
                    x:Name="btnReadGPIO"
                    Text="Read GPIO"
                    FontSize="10"
                    WidthRequest="80"
                    HeightRequest="40"
                    HorizontalOptions="End"
                    Margin="0, 0, 22, 0"
                    Clicked="Click_btnReadGPIO"/>
            </Grid>
            
            <Button 
                Grid.Column="2"
                Grid.Row="2"
                x:Name="btnCheckDevice"
                Text="Check device"
                FontSize="10"
                WidthRequest="150"
                HeightRequest="40"
                Clicked="Click_btnCheckDevice"/>
            <Button 
                Grid.Column="0"
                Grid.Row="3"
                x:Name="btn1"
                Text="Debug"
                FontSize="10"
                WidthRequest="150"
                HeightRequest="40"
                Clicked="Click_btnDebug"/>
            <Button 
                Grid.Column="3"
                Grid.Row="3"
                x:Name="btnDebug"
                Text="Debug"
                FontSize="10"
                WidthRequest="150"
                HeightRequest="40"
                Clicked="Click_btnDebug"/>

        </Grid>

        <Label  Grid.Row="1"
                Text="【Log】"/>

        <ScrollView Grid.Column="0" Grid.Row="2" Margin="5,5" BackgroundColor="AliceBlue" x:Name="sv_log">
            <Label 
                x:Name="lblLog"
                Text=""
                Margin="5"
                TextColor="Black"
                />
        </ScrollView>
        
        <ScrollView Grid.Row="3">
            <VerticalStackLayout
                Spacing="25"
                Padding="30,0"
                VerticalOptions="Center">

                <Image
                    Source="dotnet_bot.png"
                    SemanticProperties.Description="Cute dot net bot waving hi to you!"
                    HeightRequest="200"
                    HorizontalOptions="Center" />

                <Label
                    Text="Hello, World!!!!"
                    SemanticProperties.HeadingLevel="Level1"
                    FontSize="32"
                    HorizontalOptions="Center" />

                <Label
                    Text="Welcome to .NET Multi-platform App UI"
                    SemanticProperties.HeadingLevel="Level2"
                    SemanticProperties.Description="Welcome to dot net Multi platform App U I"
                    FontSize="18"
                    HorizontalOptions="Center" />

                <Button
                    x:Name="CounterBtn"
                    Text="Click me"
                    SemanticProperties.Hint="Counts the number of times you click"
                    Clicked="OnCounterClicked"
                    HorizontalOptions="Center" />

            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
